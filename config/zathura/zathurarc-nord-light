set default-bg      "#fafafa"

set completion-bg   "#3b4252"
set completion-fg   "#fafafa"
set completion-highlight-bg "#4c566a"
set completion-highlight-fg "#fafafa"
set completion-group-bg   "#3b4252"
set completion-group-fg   "#88c0d0"

set statusbar-fg    "#2e3440"
set statusbar-bg    "#fafafa"
set statusbar-h-padding   10
set statusbar-v-padding   10

set notification-bg   "#fafafa"
set notification-fg   "#2e3440"
set notification-error-bg "#fafafa"
set notification-error-fg "#bf616a"
set notification-warning-bg "#fafafa"
set notification-warning-fg "#ebcb8b"
set selection-notification  "true"

set inputbar-fg     "#3b4252"
set inputbar-bg     "#fafafa"

set recolor     "true"
set recolor-lightcolor    "#fafafa"
set recolor-darkcolor   "#2e3440"

set index-fg      "#2e3440"
set index-bg      "#fafafa"
set index-active-fg   "#2e3440"
set index-active-bg   "#e5e9f0"

set render-loading-bg   "#fafafa"
set render-loading-fg   "#2e3440"

set highlight-color   "#88c0d0"
set highlight-active-color  "#5e81ac"

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

	#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

map J zoom out
map K zoom in
map R rotate
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

# don't make window title fullpath
set window-title-basename true
# don't show fullpath in status bar
# set statusbar-basename true
# set show-scrollbars false

set statusbar-v-padding 2
set statusbar-h-padding 8
# blank space between pages
set page-padding 2
